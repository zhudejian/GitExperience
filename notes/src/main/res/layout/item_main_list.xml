<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0EEEE"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:background="#ffffff"
        android:layout_height="fill_parent">
        <TextView
            android:id="@+id/tv_item_main_list_title"
            android:text="我是标题"
            android:textSize="45dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <View android:id="@+id/separator"
            android:background="#ffffff"
            android:layout_width = "fill_parent"
            android:layout_height="2dp"
            android:layout_below="@id/tv_item_main_list_title"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="abc"
            android:maxLines="2"

            android:layout_below="@id/separator"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/tv_item_main_list_body"
            />


        <TextView
            android:id="@+id/tv_item_main_list_lastreviewed"
            android:layout_below="@id/tv_item_main_list_body"
            android:textSize="15dp"
            android:text="24 minutes ago"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_item_main_list_total_reviews"
            android:layout_below="@id/tv_item_main_list_lastreviewed"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:text="15 times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>
</LinearLayout>